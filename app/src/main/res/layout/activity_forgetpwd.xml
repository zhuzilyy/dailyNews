<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/forgetpwdLogo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/forgetpwd_close_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="返回"
            android:textSize="16sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            />
        <!--账号密码登录-->
        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_marginTop="60dp"
            android:layout_below="@+id/forgetpwdLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <!--账户-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_stroke_gray"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="25dp"
                    android:src="@mipmap/phone_icon"

                    />
                <com.qianyi.dailynews.views.ClearEditText
                    android:id="@+id/forgetpwd_account_cet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null"
                    android:hint="请输入手机号"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp"
                    android:paddingLeft="@dimen/dp_10"

                    />

            </LinearLayout>
            <!--密码-->
            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginRight="35dp"
                android:layout_marginLeft="35dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_stroke_gray"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_height="25dp"
                    android:src="@mipmap/lock_icon"

                    />
                <com.qianyi.dailynews.views.ClearEditText
                    android:id="@+id/forgetpwd_pwd_cet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null"
                    android:hint="请设置密码"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp"
                    android:paddingLeft="@dimen/dp_10"

                    />

            </LinearLayout>
            <!--验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/shape_stroke_gray"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:src="@mipmap/lock_icon"

                    />

                <com.qianyi.dailynews.views.ClearEditText
                    android:id="@+id/register_code_cet"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:paddingLeft="@dimen/dp_10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray"
                    android:textSize="16sp"

                    />

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/gray" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发送验证码"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>
            <!--登录-->
            <Button
                android:enabled="false"
                android:id="@+id/forgetpwd_forgetpwd_btn"
                android:layout_marginTop="25dp"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:text="登录"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_selector_login"
                />

        </LinearLayout>


    </RelativeLayout>

</LinearLayout>