<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"

                    android:layout_weight="1">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:layout_width="86dp"
                        android:layout_height="86dp"
                        android:src="@mipmap/smallweixin_icon"
                        />
                </RelativeLayout>

                <LinearLayout
                    android:paddingRight="@dimen/dp_10"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="12.5dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:text="德科技发的设计费放假覅我附件四伏服务黑发生纠纷iOS费危机和覅无覅服务金额非"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:text="每个好友阅读 +20金币"
                        />
                    <TextView
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:text="分享朋友圈"
                        android:background="@drawable/shape_stroke_coner4_gray"
                        />

                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="立即分享"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_coner30_red"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="15dp"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

</LinearLayout>