<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/title"
            android:layout_weight="6"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/big_shots"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
               android:background="@color/light_gray5"
                />

        </LinearLayout>
        <LinearLayout
            android:paddingTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_below="@+id/title"
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_height="0dp">
            <!--说明-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="您需要上传3张截图"
                    android:textSize="14sp"
                    />
                <TextView
                    android:id="@+id/tv_jitu"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/right_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="截图事例"
                    android:textSize="14sp"
                    />
                <ImageView
                    android:layout_marginRight="@dimen/dp_20"
                    android:id="@+id/right_back"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/huinext_icon"
                    android:layout_alignParentRight="true"

                    />

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                >
                <RelativeLayout
                    android:id="@+id/re_upload001"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/upload_pic001"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                       android:background="@mipmap/addpic"
                        />
                    <ImageView
                        android:id="@+id/del_001"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@mipmap/delete"
                        android:layout_alignParentRight="true"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_upload002"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/upload_pic002"
                        android:scaleType="centerCrop"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@mipmap/addpic"
                        />
                    <ImageView
                        android:id="@+id/del_002"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@mipmap/delete"
                        android:layout_alignParentRight="true"

                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/re_upload003"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <ImageView
                        android:layout_centerInParent="true"
                        android:id="@+id/upload_pic003"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:background="@mipmap/addpic"
                        />
                    <ImageView
                        android:id="@+id/del_003"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@mipmap/delete"
                        android:layout_alignParentRight="true"

                        />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/submit_pic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="提交截图"
        android:layout_alignParentBottom="true"
        android:background="@color/main_red"
        android:textSize="16sp"
        android:textColor="@color/white"
        />

</RelativeLayout>