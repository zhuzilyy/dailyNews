<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/re_bg"
       android:layout_centerInParent="true"
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:background="@mipmap/novicearea_icon"

        >
        <Button
            android:id="@+id/btn_register_now"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="77dp"
            android:text="立即注册领红包"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_register_new"
            android:textColor="@color/red"
            android:layout_marginLeft="25dp"
            />
        <TextView
            android:id="@+id/tv_register_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情 >>"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:textColor="@color/yellow"
            />
    </RelativeLayout>
    <View
        android:id="@+id/v_delete"
        android:layout_width="200dp"
        android:layout_alignParentRight="true"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/re_bg"
        android:layout_alignTop="@+id/re_bg"
        />


</RelativeLayout>