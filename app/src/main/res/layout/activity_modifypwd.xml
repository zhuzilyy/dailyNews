<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <include layout="@layout/layout_title"/>
    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <!--原密码-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原密码："
            android:textSize="16sp"
            />
        <com.qianyi.dailynews.views.ClearEditText
            android:password="true"
            android:id="@+id/et_oldPwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入原密码"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_gray5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <!--新密码-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码："
            android:textSize="16sp"
            />
        <com.qianyi.dailynews.views.ClearEditText
            android:password="true"
            android:id="@+id/et_newPwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入您的新密码"
            android:textSize="16sp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_gray5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <!--确认新密码-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_15"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="再次输入："
            android:textSize="16sp"
            />
        <com.qianyi.dailynews.views.ClearEditText
            android:password="true"
            android:id="@+id/et_confirmPwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请再次输入您的新密码"
            android:textSize="16sp"
            android:textColorHint="@color/gray"
            android:textColor="@color/black"
            android:layout_weight="1"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/light_gray5"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    </LinearLayout>
    <!--确认修改-->
    <Button
        android:id="@+id/btn_confrim"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="确认修改"
        android:layout_alignParentBottom="true"
        android:background="@color/main_red"
        android:textColor="@color/white"
        android:textSize="16sp"
        />
</RelativeLayout>