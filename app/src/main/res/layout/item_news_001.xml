<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <!--标题-->
    <TextView
        android:id="@+id/news003_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:text=""
        />
    <!--3张图片-->
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/news003_pic01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/news003_pic02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"/>
        <ImageView
            android:id="@+id/news003_pic03"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:layout_weight="1"
            />
    </LinearLayout>
    <!--bottom-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_5"
        >
        <LinearLayout
            android:id="@+id/ll_news003_award"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/red_package"/>
            <TextView
                android:id="@+id/news003_award"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读奖励"
                android:textSize="14sp"
                android:textColor="@color/red"
                android:visibility="visible"
                />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:id="@+id/news003_publishman"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:maxLength="6"
            android:textSize="12sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/news003_posttime"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone"
            android:textSize="12sp"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/news003_read"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp"
            android:textColor="@color/black"
            />
        <!--delete-->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <ImageView

                android:id="@+id/news003_delete"
                android:layout_width="25dp"
                android:padding="@dimen/dp_5"
                android:layout_height="25dp"
                android:src="@mipmap/delete"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>